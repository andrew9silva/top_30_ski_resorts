class Resort
 
 def resort_selector
   "Which state are you skiing in?"
  
  if "Colorado"
   #[coloradoresorts]
   
  elsif "Utah"
   #[utahresorts]
   
  elsif "California"
   #[californiaresorts]
   
  elsif "Montana"
   #[montanaresorts]
   
  elsif "New Mexico"
   #[newmexicoresorts]
   
  elsif "Canada"
   #[canadaresorts]
   
  elsif "Wyoming"
   #[wyomingresorts]
   
  else 
   puts "No resorts from there are included on the list."
 end
 
end
